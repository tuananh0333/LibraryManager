<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_padding">
            <TextView
                android:labelFor="@id/edtBookName"
                android:id="@+id/lblBookId"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/lbl_book_name"/>

            <EditText
                android:id="@+id/edtBookId"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:inputType="textFilter" />

            <ImageButton
                android:contentDescription="@string/take_image_using_camera"
                android:id="@+id/btnScanBookId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_padding">
            <TextView
                android:labelFor="@id/edtBorrowerId"
                android:id="@+id/lblBorrowerId"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/lbl_borrower_name"/>

            <EditText
                android:id="@+id/edtBorrowerId"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:inputType="textFilter" />

            <ImageButton
                android:contentDescription="@string/take_image_using_camera"
                android:id="@+id/btnScanBorrowerId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_padding">
            <TextView
                android:labelFor="@id/edtBorrowDate"
                android:id="@+id/lblBorrowDate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/lbl_borrow_date"/>

            <EditText
                android:id="@+id/edtBorrowDate"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:inputType="date"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_padding">
            <TextView
                android:labelFor="@id/edtDueDate"
                android:id="@+id/lblDueDate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/lbl_due_date"/>

            <EditText
                android:id="@+id/edtDueDate"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:inputType="date"
                android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            style="@style/Widget.AppCompat.Button"
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:textColor="@color/colorAccent" />

        <Button
            style="@style/Widget.AppCompat.Button"
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_confirm"
            android:background="@color/colorAccent"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>